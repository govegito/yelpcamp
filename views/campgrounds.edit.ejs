<% include partials/header %>

<div class="container">
      <h1 style="text-align: center;"> EDIT <%=Campground.name%> </h1>
  <div class="row">
     <div style="width:30%; margin: 0 auto;">
      <form action="/campgrounds/<%=Campground._id%>?_method=PUT" name="name" method="POST">
          <div class="form-group">
              <input class="form-control" type="text"  name="Campground[name]" value="<%=Campground.name%>">
          </div>
          <div class="form-group">
           <input class="form-control" type="text" name="Campground[img]" value="<%=Campground.img%>">
          </div>
          <div class="form-group">
           <input class="form-control" type="text" name="Campground[desc]" value="<%=Campground.desc%>">
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-block btn-primary"> SUBMIT  </button>
          </div>
      </form>
     </div>
  </div>
</div>

